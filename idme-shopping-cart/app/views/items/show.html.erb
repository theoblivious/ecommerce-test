<div class="large-3 small-12 column">
  <%=image_tag @item.itemimage%>
</div>
<div class="large-9 small-12 column">
  <h3>
    <%= @item.title %>
    <%=link_to @item.infopage do%>
      <%=image_tag asset_path("colehaan.jpg")%>
    <%end%>
  </h3>
  <p class="label item-label radius mb1">$ <%= @item.price %></p>

  <p><%= @item.description %></p>


  <%if signed_in?%>
    <%=link_to "Add to Cart", add_to_cart_path(@item), class: "button", method: :put %>

    <% # TODO: Fix this JavaScript issues: link_to "", class: "button", data: {target: @cart_action, addUrl: add_to_cart_path(@item), removeUrl: remove_from_cart_path(@item)} do%>
      <i class="fi-shopping-cart"></i>
      <span><%=@cart_action%></span> Cart
    <% # close do for javascript link %end%>
  <%end%>
</div>
